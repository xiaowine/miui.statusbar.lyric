<!--suppress DeprecatedClassUsageInspection -->
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <Preference
            android:key="ver_explain"
            android:summary="点击查看详情"
            android:title="使用说明"/>

    <SwitchPreference
            android:defaultValue="false"
            android:key="hLauncherIcon"
            android:summary=""
            android:title="隐藏桌面图标"/>


    <PreferenceCategory android:title="基础设置"/>

    <SwitchPreference
            android:defaultValue="true"
            android:key="lyricService"
            android:summary=""
            android:title="总开关"/>

    <SwitchPreference
            android:defaultValue="true"
            android:key="lyricOff"
            android:summary=""
            android:title="歌曲暂停关闭歌词"/>

    <ListPreference
            android:key="lyricAnim"
            android:summary="关闭"
            android:title="歌词动效"/>

    <EditTextPreference
            android:defaultValue="-1"
            android:key="lyricWidth"
            android:summary="自适应"
            android:title="歌词宽度"/>

    <EditTextPreference
            android:defaultValue="-1"
            android:key="lyricMaxWidth"
            android:summary="关闭"
            android:title="歌词自适应最大宽度"/>

    <EditTextPreference
            android:defaultValue="自适应"
            android:key="lyricColour"
            android:summary="自适应"
            android:title="歌词颜色"/>

    <SwitchPreference
            android:defaultValue="true"
            android:key="lyricIcon"
            android:summary=""
            android:title="歌词图标"/>

    <EditTextPreference
            android:defaultValue="2"
            android:key="lyricPosition"
            android:summary="默认"
            android:title="图标上下位置"/>

    <SwitchPreference
            android:defaultValue="false"
            android:key="lshowonce"
            android:summary="歌词太长，仅显示一次不循环"
            android:title="歌词不循环显示 (需重启系统界面)"/>

    <PreferenceCategory android:title="高级设置 (停止音乐后改动选项)"/>

    <SwitchPreference
            android:defaultValue="false"
            android:key="lyricSwitch"
            android:summary=""
            android:title="点击歌词切换时钟和歌词 (需重启系统界面)"/>

    <SwitchPreference
            android:defaultValue="false"
            android:key="antiburn"
            android:summary=""
            android:title="防烧屏"/>


    <Preference
            android:key="iconPath"
            android:summary=""
            android:title="图标路径"/>

    <SwitchPreference
            android:defaultValue="true"
            android:key="iconAutoColor"
            android:summary=""
            android:title="图标自动反色"/>

    <SwitchPreference
            android:defaultValue="false"
            android:key="hNoticeIcon"
            android:summary="自动隐藏通知图标"
            android:title="隐藏通知图标"/>

    <SwitchPreference
            android:defaultValue="true"
            android:key="hNetWork"
            android:summary="自动隐藏实时网速"
            android:title="隐藏实时网速"/>

    <SwitchPreference
            android:defaultValue="false"
            android:key="hCUK"
            android:summary="自动隐藏锁屏运营商名称"
            android:title="隐藏锁屏运营商名称"/>

    <SwitchPreference
            android:defaultValue="false"
            android:key="fileLyric"
            android:summary="广播无法使用请打开此开关\n(存储空间隔离请设置好相关权限)"
            android:title="文件传输歌词"/>

    <!--    <SwitchPreference-->
    <!--            android:defaultValue="false"-->
    <!--            android:key="hAlarm"-->
    <!--            android:summary="自动隐藏闹钟图标（需ROOT）"-->
    <!--            android:title="隐藏闹钟图标"-->
    <!--            android:enabled="false"/>-->

    <PreferenceCategory android:title="辅助功能"/>
    <Preference
            android:key="lyricHook"
            android:summary=""
            android:title="自定义Hook点 (不懂勿动)(需重启系统界面)"/>


    <SwitchPreference
            android:defaultValue="false"
            android:key="debug"
            android:summary=""
            android:title="Debug模式"/>

    <SwitchPreference
            android:defaultValue="true"
            android:key="isusedcount"
            android:summary="统计仅保存在本地"
            android:title="使用统计"/>

    <PreferenceScreen
            android:key="restartUI"
            android:summary="lsp激活后需重启系统界面生效，edxp需重启手机"
            android:title="重启系统界面"/>

    <Preference
            android:key="reset"
            android:summary="如果出现某些莫名其妙的问题请点击此处"
            android:title="重置模块"/>

    <PreferenceCategory android:title="关于"/>


    <Preference
            android:key="CheckUpdate"
            android:summary=""
            android:title="检查更新"/>

    <Preference
            android:key="about"
            android:summary=""
            android:title="关于模块"/>

    <PreferenceCategory/>
</PreferenceScreen>